{
  "compilerOptions": {
    "target": "ESNEXT",
    "module": "ESNEXT",
    "jsx": "react-native",
    "declaration": true,
    "declarationMap": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "removeComments": true,

    "esModuleInterop": true,

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["node_modules"]
}
